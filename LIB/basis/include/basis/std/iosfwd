#ifndef BASIS_IOSFWD_
#define BASIS_IOSFWD_

#include <basis/sys/configure.hpp>

namespace simstd {
	template<typename CharType>
	struct char_traits;

	template<typename CharType, typename Traits>
	class basic_string;

	typedef simstd::basic_string<char, simstd::char_traits<char> > string;
	typedef simstd::basic_string<wchar_t, simstd::char_traits<wchar_t> > wstring;

}

typedef simstd::basic_string<char, simstd::char_traits<char> > astring;
typedef simstd::basic_string<wchar_t, simstd::char_traits<wchar_t> > ustring;

#endif
